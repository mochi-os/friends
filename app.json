{
	"version": "1.0",
	"label": "app_name",
	"paths": ["friends"],
	"services": ["friends"],

	"architecture": {"engine": "starlark", "version": 2},
	"execute": ["friends.star"],

	"database": {
		"schema": 1,
		"file": "friends.db",
		"create": {"function": "database_create"}
	},

	"icons": [
		{"action": "", "label": "app_name", "file": "images/icon.svg"}
	],

	"actions": {
		"": {"file": "web/dist/index.html"},
		"assets": {"files": "web/dist/assets"},
		"images": {"files": "web/dist/images"},
		"list": {"function": "action_list"},
		"accept": {"function": "action_accept"},
		"create": {"function": "action_create"},
		"delete": {"function": "action_delete"},
		"ignore": {"function": "action_ignore"},
		"search": {"function": "action_search"}
	},

	"events": {
		"accept": {"function": "event_accept"},
		"invite": {"function": "event_invite"}
	},

	"functions": {
		"get": {"function": "function_get"},
		"list": {"function": "function_list"}
	}
}
